<section class="pb-64">
    <div class="flex flex-col items-center">
        <div class="flex flex-col w-full gap-5 items-center">
        <h1 class="text-4xl font-bold text-darkBlue">Login</h1>
            <form
            id="login-form"
            class="flex flex-col w-2/3 lg:w-1/3 gap-4">
            <div class="flex flex-col w-full">
                <label class="text-darkBlue text-2xl font-bold" for="">Username</label>
                <input id="login-username" type="text" class="ps-3 text-xl text-darkBlue rounded-full py-2 outline-paleRed">
                <p id="login-username-error" class="absolute py-2"></p>
            </div>
            <div class="flex flex-col w-full">
                <label class="text-darkBlue text-2xl font-bold" for="">Password</label>
                <input id="login-password" type="password" class="ps-3 text-xl text-darkBlue rounded-full py-2 outline-paleRed">
                <p id="login-password-error" class="absolute py-2"></p>
            </div>
              <button id="btn" class="flex justify-self-start w-1/3 py-2 p-3 bg-softRed rounded-2xl text-white justify-center hover:cursor-pointer transition ease-in-out delay-100 hover:-translate-y-1 hover:scale-110 hover:bg-bgBlue duration-200 mt-2" role="button" type="submit">Login</button>
            </form>
        </div>
    </div>
</section>