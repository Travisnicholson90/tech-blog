<section class="grid grid-cols-1 w-full items-center justify-center pb-32">
    {{#each blogPost as |blog|}}
    <div class="flex flex-col py-10 w-3/4 mx-auto gap-2">
        <h1 class="text-black text-darkBlue text-2xl lg:text-3xl font-bold">{{blog.dataValues.blog_title}}<span class="absolute hidden">{{blog.dataValues.id}}</span></h1>
        <p class="text-lightGrayishBlue">{{blog.dataValues.username}}</p>
        <p class="text-lightGrayishBlue">{{format_date blog.dataValues.createdAt}}</p>
  
              <a href="/api/blog-page/{{blog.dataValues.id}}">
              <button id="btn" class="flex justify-self-start mt-3 w-2/5 md:w-2/5 lg:w-1/5 p-2 bg-softRed rounded-2xl text-white justify-center hover:cursor-pointer transition ease-in-out delay-100 hover:-translate-y-1 hover:scale-110 hover:bg-bgBlue duration-200" type="submit" role="button">See Full Blog</button>
              </a>
    </div>
    {{/each}}
</section>

