<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/index.css">
    <script src="https://cdn.ckeditor.com/ckeditor5/38.0.1/classic/ckeditor.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            moderateBlue: 'hsl(238, 40%, 52%)',
            softRed: 'hsl(358, 79%, 66%)',
            lightGrayishBlue: 'hsl(239, 57%, 85%)',
            paleRed: 'hsl(357, 100%, 86%)',
            darkBlue: 'hsl(212, 24%, 26%)',
            grayishBlue: 'hsl(211, 10%, 45%)',
            lightGray: 'hsl(223, 19%, 93%)',
            veryLightGray: 'hsl(228, 33%, 97%)',
            white: 'hsl(0, 0%, 100%)',
          }
        }
      }
    }
  </script>
    <title>Tech Blog</title>
</head>
<body class="bg-lightGray relative">
  <header class="header relative bg-softRed flex flex-col justify-start items-start lg:flex-row lg:items-center z-0 py-3 px-3">
    <div class="flex w-full">
      <div class="flex items-center">
    <input type="checkbox" id="checkbox">
      <label for="checkbox" class="toggle">
          <div class="bars" id="bar1"></div>
          <div class="bars" id="bar2"></div>
          <div class="bars" id="bar3"></div>
      </label>
      <a href="/">
        <h1 class="z-100 text-textBlue text-2xl font-bold lg:text-4xl ms-10 text-darkBlue hover:cursor-pointer hover:text-veryLightGray">TechStack Blog</h1>
      </a>
    </div>
    <div class="flex items-center ms-auto">
      {{#if loggedIn}}
      <a href="/logout">
      <button class="signout-btn">
        <div class="signout"><svg viewBox="0 0 512 512"><path d="M377.9 105.9L500.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L377.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1-128 0c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM160 96L96 96c-17.7 0-32 14.3-32 32l0 256c0 17.7 14.3 32 32 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-64 0c-53 0-96-43-96-96L0 128C0 75 43 32 96 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32z"></path></svg></div>
        <div class="signout-text">Logout</div>
      </button>
      </a>
      {{else}}
      <a href="/login">
      <button class="signin-btn">
        <div class="signin"><svg viewBox="0 0 512 512"><path d="M217.9 105.9L340.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L217.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1L32 320c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM352 416l64 0c17.7 0 32-14.3 32-32l0-256c0-17.7-14.3-32-32-32l-64 0c-17.7 0-32-14.3-32-32s14.3-32 32-32l64 0c53 0 96 43 96 96l0 256c0 53-43 96-96 96l-64 0c-17.7 0-32-14.3-32-32s14.3-32 32-32z"></path></svg></div>
        <div class="signin-text">Login</div>
    </button>
      </a>
      {{/if}}
    </div>
    </div>



    <nav id="navbar" class="absolute flex flex-col z-100 w-full top-20 pt-20 ps-20 navbar-show navbar-hide h-screen bg-lightGray">
      <ul class="flex flex-col gap-10 text-3xl font-bold text-darkBlue">
        <a class="hover:cursor-pointer hover:text-softRed" href="/">Home<li></li></a>
        <a class="hover:cursor-pointer hover:text-softRed" href="/post-blog">New Blog<li></li></a>
        <a class="hover:cursor-pointer hover:text-softRed" href="/blogs">Blogs<li></li></a>
        {{#if loggedIn}}
        <a class="hover:cursor-pointer hover:text-softRed" href="/dashboard">Dashboard<li></li></a>
        {{/if}}
        {{#if loggedIn}}
        <a class="hover:cursor-pointer hover:text-softRed" href="/logout">Logout<li></li></a>
        {{else}}
        <a class="hover:cursor-pointer hover:text-softRed" href="/login">Login<li></li></a>
        <a class="hover:cursor-pointer hover:text-softRed" href="/signup">Sign Up<li></li></a>
        {{/if}}
      </ul>
    </nav>
  </header>
  <main class="main py-16">
  {{{body}}}
  </main>
  <script src="/js/index.js"></script>
  <script src="/js/ckEditor.js"></script>
  <script src="/js/edit-blog.js"></script>
  <script src="/js/comments.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>