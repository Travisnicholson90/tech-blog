<section class="grid grid-cols-1 items-start">
    <div class="grid grid-cols-1 items-start px-10 gap-5">
    <h1 class="text-5xl lg:text-5xl font-bold text-softRed">Dashboard</h1>
    <div class="flex flex-col text-darkBlue">
        <h2 class="text-3xl py-3 font-bold">Active Blogs</h2>
        <div class="flex flex-col leading-relaxed text-xl lg:text-2xl bg-veryLightGray gap-3 py-4 px-3 rounded-lg shadow-lg justify-between">
            {{#each blogPost as |blog|}}
                <div class="flex flex gap-2 justify-between">
                    <div class="flex flex-col gap-2">
                        <p class="font-bold">Title</p>
                        <p class="text-grayishBlue">{{blog.dataValues.blog_title}}</p>
                    </div>
                    <div class="flex items-center gap-3">
                        <a href="/edit-blog">
                            <img class="w-8" src="/assets/images/edit.svg" alt="edit-icon">
                        </a>
                        <a href="/delete-blog">
                            <img class="w-8" src="/assets/images/delete.svg" alt="">
                        </a>
                </div>
                </div>
                <div class="flex flex-col gap-2">
                    <p class="font-bold">Content</p>
                    <p class="text-grayishBlue">{{blog.dataValues.blog_content}}</p>
                </div>
                <div class="lg:flex justify-between">
                <div class="flex flex-col gap-2">
                    <p class="font-bold">Created</p>
                    <p class="text-lightGrayishBlue">{{format_date blog.dataValues.createdAt}}</p>
                </div>
                <div class="flex flex-col gap-2">
                    <p class="font-bold">Last Update</p>
                    <p class="text-lightGrayishBlue">{{format_date blog.dataValues.updatedAt}}</p>
                </div>
                </div>
                <form class="absolute hidden"><input id="blogId" type="text" value="{{blog.dataValues.id}}"></form>
            {{/each}}

        </div>
    </div>
    </div>

</section>