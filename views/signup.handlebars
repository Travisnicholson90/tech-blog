<section>
    <div class="flex flex-col items-center pb-64">
        <div class="flex flex-col w-full gap-5 items-center">
        <h1 class="text-4xl font-bold text-darkBlue">Sign Up</h1>
        <form
        class="flex flex-col w-2/3 lg:w-1/3 gap-4" 
        id="signup-form">
            <div class="flex flex-col w-full">
                <label class="text-darkBlue text-2xl font-bold" for="">First Name</label>
                <input id="signup-firstname" type="text" class="ps-3 text-xl text-darkBlue rounded-full py-2 outline-paleRed">
                <p id="signup-firstname-error" class="absolute py-2"></p>
            </div>
            <div class="flex flex-col">
                <label class="text-darkBlue text-2xl font-bold" for="">Last Name</label>
                <input id="signup-lastname" type="text" class="ps-3 text-xl text-darkBlue rounded-full py-2 outline-paleRed">
                <p id="signup-lastname-error" class="absolute py-2"></p>
            </div>
            <div class="flex flex-col">
                <label class="text-darkBlue text-2xl font-bold" for="">Email</label>
                <input id="signup-email" type="text" class="ps-3 text-xl text-darkBlue rounded-full py-2 outline-paleRed">
                <p id="signup-email-error" class="absolute py-2"></p>
            </div>
            <div class="flex flex-col">
                <label class="text-darkBlue text-2xl font-bold" for="">Username</label>
                <input id="signup-username" type="text" class="ps-3 text-xl text-darkBlue rounded-full py-2 outline-paleRed">
                <p id="signup-username-error" class="absolute py-2"></p>
            </div>
            <div class="flex flex-col">
                <label class="text-darkBlue text-2xl font-bold" for="">Password</label>
                <input id="signup-password" type="password" class="ps-3 text-xl text-darkBlue rounded-full py-2 outline-paleRed">
                <p id="signup-password-error" class="absolute py-2"></p>
            </div>
              <button id="btn" class="flex justify-self-start w-1/3 py-2 p-3 bg-softRed rounded-2xl text-white justify-center hover:cursor-pointer transition ease-in-out delay-100 hover:-translate-y-1 hover:scale-110 hover:bg-bgBlue duration-200 mt-5" role="button" type="submit">Sign Up</button>
        </form>
        </div>
    </div>
</section>